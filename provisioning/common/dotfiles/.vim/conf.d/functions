function CuteCat()
  " produces a cute cat in the messages area
  let mode = mode()
  if mode ==# 'v' || mode ==# 'V' || mode ==# "\<C-V>"
    if &mod[ified]
      echo "=^._.^= âˆ«"
    endif
  endif
endfunction

 function HeadsUpDisplay()
  " this cool bar I don't know how else to call.
  ToggleNERDTreeAndTagbar
endfunction

function VimPlugInit()
" initiate plugin manager if missing "
" validates
let data_dir = has('nvim') ? stdpath('data') . '/site' : '~/.vim'
if empty(glob(data_dir . 'autoload/plug.vim')) 
  if has('win32') " Windows download plugin file
    silent !iwr -useb https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim | ni $HOME/vimfiles/autoload/plug.vim -Force
  else " Linux download plugin file
    silent !curl -fLo $HOME/.vim/autoload/plug.vim --create-dirs "https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim"
  endif
  autocmd VimEnter * PlugInstall --sync | source ~/.vimrc " Run installer
endif
if len(filter(values(g:plugs), '!isdirectory(v:val.dir)'))
  autocmd VimEnter * PlugInstall --sync | source ~/.vimrc
endif
endfunction

function RunOnce()
  " Things to be ran just on vim entry
  try
    hi CursorLineNR ctermbg=yellow ctermfg=black
    " call mkdir($HOME . "/.vim/tmp/undo", "p", 0700)
    " call system('find ~/.vim/tmp/undo -type f -ctime +14 -exec rm -v {} +')
    call VimPlugInit()
    call SyntasticCheck()
  endtry
endfunction

