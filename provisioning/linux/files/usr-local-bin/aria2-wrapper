#!/usr/bin/env bash
# /usr/local/bin/aria2-wrapper
set -euo pipefail

URL="$1"
OUT="$2"

# Try aria2c first if available
if command -v aria2c >/dev/null 2>&1; then
    if aria2c \
        --check-certificate=false \
        --allow-overwrite=true \
        --continue=true \
        --file-allocation=none \
        --log-level=quiet \
        --max-tries=8 \
        --retry-wait=5 \
        --max-connection-per-server=4 \
        --max-file-not-found=10 \
        --min-split-size=1M \
        --no-conf \
        --remote-time=true \
        --summary-interval=120 \
        --timeout=20 \
        --connect-timeout=10 \
        --retry-on-5xx=true \
        --retry-on-400=true \
        --retry-on-host-error=true \
        --dir=/ \
        --out "$OUT" \
        "$URL"
    then
        exit 0
    fi
fi

echo "aria2c failed, falling back to curl/wget-style downloader" >&2

# fallback to built-in downloader
curl -L --fail --retry 5 --retry-delay 5 -o "$OUT" "$URL" \
  || wget --tries=5 --waitretry=5 -O "$OUT" "$URL"
